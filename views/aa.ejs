<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .feature-container {
            display: flex;
            align-items: center;
            max-width: 80%;
            /* Ekran genişliğinin %80'i */
            margin: 0 auto;
            position: relative;
            overflow: hidden;
        }

        /* Kartların bulunduğu alan */
        .feature-cards {
            display: flex;
            scroll-behavior: smooth;
            overflow: hidden;
            width: 100%;
        }

        /* Tekil kart stili */
        .feature-card {
            flex: 0 0 300px;
            /* Kart genişliği */
            margin: 10px;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Kaydırma butonları */
        .scroll-button {
            background-color: #444;
            color: white;
            border: none;
            padding: 10px;
            font-size: 24px;
            cursor: pointer;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            z-index: 1;
        }

        .scroll-button.left {
            left: 0;
        }

        .scroll-button.right {
            right: 0;
        }
    </style>
</head>

<body>
    <div class="feature-container">
        <button class="scroll-button left" id="mrb">&#10094;</button>
        <div class="feature-cards">
            <div class="feature-card">Kart 1</div>
            <div class="feature-card">Kart 2</div>
            <div class="feature-card">Kart 3</div>
            <div class="feature-card">Kart 4</div>
            <div class="feature-card">Kart 5</div>
        </div>
        <button class="scroll-button right" id="mrb2">&#10095;</button>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const container = document.querySelector('.feature-cards');
            const containerWidth = window.innerWidth * 0.8; // Ekranın %80'i
            const cardWidth = 320; // Kart genişliği + margin (300px kart + 20px margin)
            let scrollAmount = 0;

            document.getElementById("mrb").addEventListener('click', () => {
                if (scrollAmount > 0) {
                    scrollAmount -= cardWidth;
                    container.scrollTo({ left: scrollAmount, behavior: 'smooth' });
                } else {
                    // Eğer ilk karttan önce gidilmek istenirse, son karta atla
                    scrollAmount = container.scrollWidth - containerWidth;
                    container.scrollTo({ left: scrollAmount, behavior: 'smooth' });
                }
            });

            document.getElementById("mrb2").addEventListener('click', () => {
                if (scrollAmount < container.scrollWidth - containerWidth) {
                    scrollAmount += cardWidth;
                    container.scrollTo({ left: scrollAmount, behavior: 'smooth' });
                } else {
                    // Eğer son karttan sonra gidilmek istenirse, ilk karta dön
                    scrollAmount = 0;
                    container.scrollTo({ left: scrollAmount, behavior: 'smooth' });
                }
            });
        });
    </script>

</body>

</html>