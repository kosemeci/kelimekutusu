</head>

<body>
    <%- include('partials/navbar') %>
        <main class="container">
            <h1><a href="/kutum" class="createBox">Kelime kutunu oluştur</a> ya da aşağıdaki kutulardan birine tıkla!
            </h1>
            <div class="cards">
                <% words.forEach((word,index)=> { %>
                    <div class="card color<%=++index%>" id="<%= word.level %>">
                        <div class="box level-a">
                            <% ['front', 'back' , 'left' , 'right' , 'top' , 'bottom' ].forEach(face=> { %>
                                <div class="face <%= face %>">
                                    <%= word.level %>
                                </div>
                                <% }) %>
                        </div>
                        <p>
                            <%= word.level %> seviyesinde <%= word.count %> kelime
                                    <p>
                    </div>
                    <% }) %>
            </div>
            <div class="separator"></div>
            <div class="cards">
                <% words_category.forEach((word,index)=> { %>
                    <div class="card color<%=++index+9%>" id="<%= word.category %>">
                        <div class="box level-a">
                            <% ['front', 'back' , 'left' , 'right' , 'top' , 'bottom' ].forEach(face=> { %>
                                <div class="face <%= face %>">
                                    <%= word.category %>
                                </div>
                                <% }) %>
                        </div>
                        <p>
                            <% words_TrCategory.forEach((trword)=> { %>
                                <% if (word.category===trword.english) { %>
                                    <%= trword.turkish %> kategorisinde <br>
                                        <%= word.count %> kelime
                                            <% } %>
                                                <% }) %>
                        </p>
                    </div>
                    <% }) %>
            </div>
            <div class="create-box">
                <a href="/kutum" class="create-box-btn">Kelime Kutunu Oluştur</a>
            </div>
            <%- include('partials/routes') %>
        </main>
        <script src="/js/index.js"></script>
</body>

