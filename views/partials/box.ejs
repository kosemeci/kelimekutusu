<link rel="stylesheet" href="/css/box.css?v=1.1">
<div class="icon-container">
    <i id="speakButton" class="fas fa-volume-mute" style="font-size: 24px; cursor: pointer;"></i>
</div>
<div class="scene" id="scene">
    <div class="box" id="box">
        <div class="face front">Word Box</div>
        <div class="face back"></div>
        <div class="face left"></div>
        <div class="face right"></div>
        <div class="face top" id="top"><span id="selectZ">Click</span></div>
        <div class="face bottom"></div>
        <div class="paper" id="paper"></div>
    </div>
</div>
<h3 id="answerText" >Click the box!</h3>
<div class="progress-container" style="display: none;">
</div>
<div class="answer-section" id="answer-section" style="display: none;">
    <p id="questionText"></p>
    <input type="text" id="userAnswer" placeholder="Write answer">
    <button id="submitAnswer">Send reply</button>
</div>